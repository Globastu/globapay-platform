# Database
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/globapay?schema=public"

# Redis
REDIS_URL="redis://localhost:6379"

# Server Configuration
PORT=3001
HOST=0.0.0.0
NODE_ENV=development

# Authentication
JWT_SECRET="your-super-secret-jwt-key-change-in-production"
JWT_EXPIRES_IN="7d"

# External Services
PSP_API_KEY="your-payment-service-provider-api-key"
PSP_WEBHOOK_SECRET="your-psp-webhook-secret"
FRAUD_API_KEY="your-fraud-detection-api-key"
KYB_API_KEY="your-kyb-verification-api-key"

# Webhook Configuration
WEBHOOK_SECRET="your-webhook-signing-secret"

# File Storage (optional - for document uploads)
AWS_ACCESS_KEY_ID="your-aws-access-key"
AWS_SECRET_ACCESS_KEY="your-aws-secret-key"
AWS_REGION="us-west-2"
AWS_BUCKET="globapay-documents"

# Email Configuration (optional - for notifications)
SMTP_HOST="smtp.example.com"
SMTP_PORT=587
SMTP_USER="noreply@globapay.com"
SMTP_PASS="your-smtp-password"

# Logging
LOG_LEVEL="info"

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000