# Production environment variables for Vercel deployment
# Enable mock mode for demo purposes
NEXT_PUBLIC_MOCK=1

# Feature Flags
NEXT_PUBLIC_INVOICES_ENABLED=1

# NextAuth configuration - these should be set in Vercel dashboard
# NEXTAUTH_URL will be automatically set by Vercel to the deployment URL
# NEXTAUTH_SECRET should be set to a secure random string in Vercel dashboard

# Mock mode configuration - no API needed when NEXT_PUBLIC_MOCK=1
NEXT_PUBLIC_API_BASE_URL=
NEXT_PUBLIC_API_URL=