# Sandbox Mode Configuration
# Set to 1 to enable sandbox mode with realistic demo data
# Auto-enabled on localhost and Vercel deployments
NEXT_PUBLIC_SANDBOX_MODE=1

# API Configuration
# Leave empty when using sandbox mode, or set to your API URL
NEXT_PUBLIC_API_BASE_URL=

# NextAuth Configuration
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-super-secret-nextauth-key-here

# Feature Flags
NEXT_PUBLIC_INVOICES_ENABLED=1
NEXT_PUBLIC_CHECKOUT_ENABLED=1

# Gr4vy Configuration (for production refunds)
GR4VY_API_BASE_URL=https://api.gr4vy.com
GR4VY_API_KEY=your-gr4vy-api-key-here

# When not in sandbox mode, configure these for real API
# NEXT_PUBLIC_API_BASE_URL=http://localhost:3001